.content,
.content__item__image,
.content__item--single {
	col(1/1, cycle: 1);
}
.content__item {
	col(1/1, cycle: 1);
	overflow:hidden;
	+from($small-screen){
		col(1/2, uncycle: 1, cycle: 2);
	}
	+from($medium-screen){
		col(1/3, uncycle: 2, cycle: 3);
	}
	+from($larger-screen){
		col(1/4, uncycle: 3, cycle: 4);
	}
}